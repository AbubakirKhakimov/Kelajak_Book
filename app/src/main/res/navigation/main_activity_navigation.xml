<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_navigation"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.x.a_technologies.kelajak_book.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_bookDetailsFragment"
            app:destination="@id/bookDetailsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_getUserInfoFragment"
            app:destination="@id/getUserInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.x.a_technologies.kelajak_book.fragments.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_bookDetailsFragment"
            app:destination="@id/bookDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/bookmarkFragment"
        android:name="com.x.a_technologies.kelajak_book.fragments.BookmarkFragment"
        android:label="fragment_bookmark"
        tools:layout="@layout/fragment_bookmark" >
        <action
            android:id="@+id/action_bookmarkFragment_to_bookDetailsFragment"
            app:destination="@id/bookDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.x.a_technologies.kelajak_book.fragments.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/bookDetailsFragment"
        android:name="com.x.a_technologies.kelajak_book.fragments.BookDetailsFragment"
        android:label="fragment_book_details"
        tools:layout="@layout/fragment_book_details" >
        <action
            android:id="@+id/action_bookDetailsFragment_to_authorizationNumberFragment"
            app:destination="@id/authorizationNumberFragment" />
        <action
            android:id="@+id/action_bookDetailsFragment_to_allReviewsFragment"
            app:destination="@id/allReviewsFragment" />
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.x.a_technologies.kelajak_book.fragments.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_getUserInfoFragment"
            app:destination="@id/getUserInfoFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.x.a_technologies.kelajak_book.fragments.WelcomeFragment"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome" >
        <action
            android:id="@+id/action_welcomeFragment_to_infoFragment"
            app:destination="@id/infoFragment" />
    </fragment>
    <fragment
        android:id="@+id/infoFragment"
        android:name="com.x.a_technologies.kelajak_book.fragments.InfoFragment"
        android:label="fragment_info"
        tools:layout="@layout/fragment_info" >
        <action
            android:id="@+id/action_infoFragment_to_authorizationNumberFragment"
            app:destination="@id/authorizationNumberFragment" />
    </fragment>
    <fragment
        android:id="@+id/authorizationNumberFragment"
        android:name="com.x.a_technologies.kelajak_book.fragments.AuthorizationNumberFragment"
        android:label="fragment_authorization_number"
        tools:layout="@layout/fragment_authorization_number" >
        <action
            android:id="@+id/action_authorizationNumberFragment_to_verificationCodeFragment"
            app:destination="@id/verificationCodeFragment" />
        <action
            android:id="@+id/action_authorizationNumberFragment_to_getUserInfoFragment"
            app:destination="@id/getUserInfoFragment" />
        <action
            android:id="@+id/action_authorizationNumberFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/welcomeFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/verificationCodeFragment"
        android:name="com.x.a_technologies.kelajak_book.fragments.VerificationCodeFragment"
        android:label="fragment_verification_code"
        tools:layout="@layout/fragment_verification_code" >
        <action
            android:id="@+id/action_verificationCodeFragment_to_getUserInfoFragment"
            app:destination="@id/getUserInfoFragment" />
        <action
            android:id="@+id/action_verificationCodeFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/welcomeFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/getUserInfoFragment"
        android:name="com.x.a_technologies.kelajak_book.fragments.GetUserInfoFragment"
        android:label="fragment_get_user_info"
        tools:layout="@layout/fragment_get_user_info" >
        <action
            android:id="@+id/action_getUserInfoFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/welcomeFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/allReviewsFragment"
        android:name="com.x.a_technologies.kelajak_book.fragments.AllReviewsFragment"
        android:label="fragment_all_reviews"
        tools:layout="@layout/fragment_all_reviews" />
</navigation>